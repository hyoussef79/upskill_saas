<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">DevMatch Community</h1>
      <p class="text-center">Welcome to the DevMatch community. Users must fill out their profile in order to be visible in the community.</p>
      <ul class="list-unstyled">
        <% @users.each do |user| %>
          <% if user.profile %>
            <li>
              <div class="well row <%= cycle('light-orange-bg', '') %>">
                <div class="col-sm-4 text-center">
                  <% if false %>
                    <% if user.profile.avatar %>
                      <%= link_to user do %>
                        <%= image_tag user.profile.avatar.url, class: 'avatar-index-img' %>
                      <% end %>
                    <% end %>
                  <% end %>
                  <%= link_to user do %>
                    <%= image_tag "http://www.gravatar.com/avatar/?d=mm", class: 'avatar-index-img' %>
                  <% end %>
                </div>
                  <%= link_to user do %>
                    <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                  <% end %>
                  <p>
                    <%= user.profile.job_title %>
                    <% if user.plan_id == 2 %>
                      <span class="label label-danger">PRO</span>
                    <% end %>
                  </p>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
